.basic-button, .white-button, .red-button {
  width: 160rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border: 1px solid #ff2150;
  border-radius: 3px;
}
.white-button {
  background-color: #fff;
  color: #ff2150;
}
.red-button {
  background-color: #ff2150;
  color: #fff;
}
.youlike-card {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.youlike-card .youlike-item {
  border: 1px solid #eee;
  padding: 16rpx;
  width: 50%;
  height: 540rpx;
}
.youlike-card .youlike-item .youlike-item-pic {
  width: 100%;
  height: 356rpx;
  margin-bottom: 16rpx;
}
.youlike-card .youlike-item .youlike-item-title {
  height: 72rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
}
.youlike-card .youlike-item .youlike-item-price image {
  float: right;
  height: 32rpx;
  width: 32rpx;
}
.youlike-card .youlike-item .youlike-item-price .price {
  color: #ff2150;
}
.youlike-card .youlike-item .youlike-item-price .origin {
  text-decoration: line-through;
  color: #999999;
  font-size: 24rpx;
  margin-left: 32rpx;
}
.youlike-card .youlike-item:nth-child(n+1) {
  border-left: none;
}
.youlike-card .youlike-item:nth-child(2n) {
  border-right: none;
}
